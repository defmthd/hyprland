{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 28,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["cpu", "tray", "battery", "clock"],
 
    "hyprland/workspaces": {
        "format": "{name} {icon}",
        "format-icons": {
            "1": "🪬",
            "2": "🐙",
            "3": "👩🏿‍💻",
            "4": "🐱",
            "5": "㊙️",
            "6": "🔮",
            "7": "🌜",
            "8": "🎮"
        },
        "active-only": false
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Google Chrome": "🌎 $1"
        },
        "separate-outputs": true
    },

    "cpu": {
        "interval": 1,
        "format": "CPU: {usage}%",
        "tooltip": false
    },
    
    "tray": {
        "icon-size": 14,
        "spacing": 8
    },

    "battery": {
        "format": "{icon} {capacity}%",
        "format-icons": ["", "", "", "", ""],
        "interval": 60
    },

    "clock": {
        "locale": "ru_RU.UTF-8",
        "format": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y}</big>\n<tt><span size='6pt' font='JetBrainsMono Nerd Font Mono'>{calendar}</span></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    }
}
